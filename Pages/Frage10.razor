@page "/frage10"
@inject MainService MS
@inject TimeService TS
@using System.ComponentModel.DataAnnotations
@using System.Collections.Generic
@inject NavigationManager Navigation

<h1>Einbürgerungstest - 10</h1>
<br>
    <div class="quiz-container">
      <center><h3 class="question">Wie heißt Deutschlands heutiges Staatsoberhaupt?</h3</center>
      
    <form>
        <div class="btn-container">
          <button class="answer-btn" type="button" @onclick="@(() => Frage10Falsch(1))">Bodo Ramelow</button>
          <button class="answer-btn" type="button" @onclick="Frage10Richtig">Frank-Walter Steinmeier</button>
          <button class="answer-btn" type="button" @onclick="@(() => Frage10Falsch(2))">Bärbel Bas</button>
          <button class="answer-btn" type="button" @onclick="@(() => Frage10Falsch(3))">Joachim Gauck</button>
        </div>
    <br>
<div class="w3-light-grey w3-round">
  <div class="w3-container w3-round w3-blue" style="width:30%">10/33</div>
    </div>
      </form>
    </div>

@code {

private void Frage10Falsch(int Frage10Auswahl) 
  {
    switch(Frage10Auswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("Bodo Ramelow");
    MS.RichtigeAntwortenListe.Add("Frank-Walter Steinmeier");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage11");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("Bärbel Bas");
   MS.RichtigeAntwortenListe.Add("Frank-Walter Steinmeier");
   Navigation.NavigateTo("/frage11");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("Joachim Gauck");
   MS.RichtigeAntwortenListe.Add("Frank-Walter Steinmeier");
   Navigation.NavigateTo("/frage11");
        break; 
    }
  }

    private void Frage10Richtig() {
        MS.FrageRichtig();
        Navigation.NavigateTo("/frage11");
    }
} 
