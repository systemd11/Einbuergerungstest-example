    <div class="quiz-container">
    <center><h3 class="question">Was war am 8. Mai 1945?</h3</center>
    <form>
        <div class="btn-container">
           <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(1))">Tod Adolf Hitlers</button>
          <button class="answer-btn" type="button" @onclick="FrageRichtig">Ende des Zweiten Weltkriegs in Europa</button>
         <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(2))">Beginn des Berliner Mauerbaus</button>
