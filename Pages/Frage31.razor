@code {

private void FrageFalsch(int FrageAuswahl) 
  {
    switch(FrageAuswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("Tod Adolf Hitlers");
    MS.RichtigeAntwortenListe.Add("Ende des Zweiten Weltkriegs in Europa");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage32");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("Beginn des Berliner Mauerbaus");
   MS.RichtigeAntwortenListe.Add("Ende des Zweiten Weltkriegs in Europa");
   Navigation.NavigateTo("/frage32");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("Wahl von Konrad Adenauer zum Bundeskanzler");
   MS.RichtigeAntwortenListe.Add("Ende des Zweiten Weltkriegs in Europa");
   Navigation.NavigateTo("/frage32");
        break; 
    }
  }

    private void FrageRichtig() {
        MS.FrageRichtig();
        Navigation.NavigateTo("/frage32");
    }
} 