private void FrageFalsch(int FrageAuswahl) 
  {
    switch(FrageAuswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("An das Ende des Zweiten Weltkrieges");
    MS.RichtigeAntwortenListe.Add("An die Opfer des Nationalsozialismus.");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage21");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("An die verabschiedung des Grundgesetzes");
   MS.RichtigeAntwortenListe.Add("An die Opfer des Nationalsozialismus.");
   Navigation.NavigateTo("/frage23");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("An die Wiedervereinigung Deutschlands.");
   MS.RichtigeAntwortenListe.Add("An die Opfer des Nationalsozialismus.");
   Navigation.NavigateTo("/frage23");
