@page "/frage27"
@inject MainService MS
@inject TimeService TS
@using System.ComponentModel.DataAnnotations
@using System.Collections.Generic
@inject NavigationManager Navigation

<h1>Einbürgerungstest - Frage 27</h1>
<br>
    <div class="quiz-container">
    <center><h3 class="question">Was bekommen wahlberechtigte Bürger und Bürgerinnen in Deutschland vor einer Wahl?</h3</center>
    <form>
        <div class="btn-container">
          <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(1))">Eine Wahlerlaubnis vom Bundespräsidenten</button>
         <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(2))">Eine Benachrichtigung von der Bundesversammlung</button>
        <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(3))">Eine Benachrichtigung vom Pfarramt</button>
        <button class="answer-btn" type="button" @onclick="FrageRichtig">Eine Wahlbenachrichtigung von der Gemeinde</button>
        </div>
    <br>
<div class="w3-light-grey w3-round">
  <div class="w3-container w3-round w3-blue" style="width:81%">27/33</div>
    </div>
      </form>
    </div>

@code {

private void FrageFalsch(int FrageAuswahl) 
  {
    switch(FrageAuswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("eine Wahlerlaubnis vom Bundespräsidenten");
    MS.RichtigeAntwortenListe.Add("Eine Wahlbenachrichtigung von der Gemeinde");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage28");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("Eine Benachrichtigung von der Bundesversammlung");
   MS.RichtigeAntwortenListe.Add("Eine Wahlbenachrichtigung von der Gemeinde");
   Navigation.NavigateTo("/frage28");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("Eine Benachrichtigung vom Pfarramt");
   MS.RichtigeAntwortenListe.Add("Eine Wahlbenachrichtigung von der Gemeinde");
   Navigation.NavigateTo("/frage28");
        break; 
    }
  }

    private void FrageRichtig() {
        MS.FrageRichtig();
        Navigation.NavigateTo("/frage28");
    }
} 