@page "/frage12"
@inject MainService MS
@inject TimeService TS
@using System.ComponentModel.DataAnnotations
@using System.Collections.Generic
@inject NavigationManager Navigation

<h1>Einbürgerungstest - Frage 12</h1>
<br>
    <div class="quiz-container">
      <center><h3 class="question">Wie viel Prozent der Zweitstimmen müssen Parteien mindestens bekommen, um in den Deutschen Bundestag gewählt zu werden?</h3</center>
      
    <form>
        <div class="btn-container">
          <button class="answer-btn" type="button" @onclick="@(() => Frage12Falsch(1))">3%</button>
          <button class="answer-btn" type="button" @onclick="@(() => Frage12Falsch(2))">4%</button>
          <button class="answer-btn" type="button" @onclick="Frage12Richtig">5%"</button>
          <button class="answer-btn" type="button" @onclick="@(() => Frage12Falsch(3))">10%</button>
        </div>
    <br>
<div class="w3-light-grey w3-round">
  <div class="w3-container w3-round w3-blue" style="width:36%">12/33</div>
    </div>
      </form>
    </div>

@code {

private void Frage12Falsch(int Frage12Auswahl) 
  {
    switch(Frage12Auswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("3%");
    MS.RichtigeAntwortenListe.Add("5%");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage13");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("4%");
   MS.RichtigeAntwortenListe.Add("5%");
   Navigation.NavigateTo("/frage13");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("10%");
   MS.RichtigeAntwortenListe.Add("5%");
   Navigation.NavigateTo("frage13");
        break; 
    }
  }

    private void Frage12Richtig() {
        MS.FrageRichtig();
        Navigation.NavigateTo("/frage13");
    }
} 
