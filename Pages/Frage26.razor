@code {

private void FrageFalsch(int FrageAuswahl) 
  {
    switch(FrageAuswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("offen, sicher, frei");
    MS.RichtigeAntwortenListe.Add("frei, gleich, geheim.");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage27");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("geschlossen, gleich, sicher");
   MS.RichtigeAntwortenListe.Add("frei, gleich, geheim");
   Navigation.NavigateTo("/frage27");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("sicher, offen, freiwillig");
   MS.RichtigeAntwortenListe.Add("frei, gleich, geheim");
   Navigation.NavigateTo("/frage27");
        break; 
    }
  }

    private void FrageRichtig() {
        MS.FrageRichtig();
        Navigation.NavigateTo("/frage27");
    }
