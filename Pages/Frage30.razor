@page "/frage30"
@inject MainService MS
@inject TimeService TS
@using System.ComponentModel.DataAnnotations
@using System.Collections.Generic
@inject NavigationManager Navigation

<h1>Einbürgerungstest - Frage 30</h1>
<br>
    <div class="quiz-container">
    <center><h3 class="question">Ein Richter gehört in Deutschland zur… ?</h3</center>
    <form>
        <div class="btn-container">
           <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(1))">vollziehenden Gewalt</button>
          <button class="answer-btn" type="button" @onclick="FrageRichtig">rechtsprechenden Gewalt</button>
         <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(2))">planenden Gewalt</button>
        <button class="answer-btn" type="button" @onclick="@(() => FrageFalsch(3))">gesetzgebenden Gewalt</button>
        </div>
    <br>
<div class="w3-light-grey w3-round">
  <div class="w3-container w3-round w3-blue" style="width:90%">30/33</div>
    </div>
      </form>
    </div>

@code {

private void FrageFalsch(int FrageAuswahl) 
  {
    switch(FrageAuswahl) {
            
        case 1:
    MS.FalscheAntworten.Add("vollziehenden Gewalt");
    MS.RichtigeAntwortenListe.Add("rechtsprechenden Gewalt.");
    MS.FrageFalsch();
    Navigation.NavigateTo("/frage31");
        break; 

        case 2:
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("planenden Gewalt");
   MS.RichtigeAntwortenListe.Add("rechtsprechenden Gewalt");
   Navigation.NavigateTo("/frage31");
        break;
            
        case 3: 
   MS.FrageFalsch();
   MS.FalscheAntworten.Add("gesetzgebenden Gewalt");
   MS.RichtigeAntwortenListe.Add("rechtsprechenden Gewalt");
   Navigation.NavigateTo("/frage31");
        break; 
    }
  }

    private void FrageRichtig() {
        MS.FrageRichtig();
        Navigation.NavigateTo("/frage31");
    }
} 
